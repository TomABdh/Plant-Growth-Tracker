<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:percent="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/mainLayout"
    tools:ignore="MissingClass">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/corners">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="257dp"
            android:padding="12dp">

            <TextView
                android:id="@+id/id_text"
                android:layout_width="44dp"
                android:layout_height="76dp"
                android:text="1"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/name_text"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="97dp"
                android:layout_toLeftOf="@id/id_text"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/var_text"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_below="@id/name_text"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-2dp"
                android:layout_marginEnd="97dp"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/target_text"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_below="@id/var_text"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="97dp"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/height_text"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_below="@id/target_text"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="97dp"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_target"
                android:layout_width="75dp"
                android:layout_height="53dp"
                android:layout_alignEnd="@+id/target_text"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="216dp"
                android:layout_marginBottom="56dp"
                android:text="@string/Real_height"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_height"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_alignEnd="@+id/height_text"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="218dp"
                android:layout_marginBottom="8dp"
                android:text="@string/Pot_height"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="83dp"
                android:layout_height="63dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="14dp"
                android:layout_marginRight="-295dp"
                android:layout_marginBottom="51dp"
                android:layout_toLeftOf="@id/target_text"
                percent:srcCompat="@drawable/ic_edit" />

            <ImageView
                android:id="@+id/delete"
                android:layout_width="97dp"
                android:layout_height="55dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="199dp"
                percent:srcCompat="@drawable/ic_delete" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>